<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="employeeRepository"
          class="com.devni.training.salesmanager.repository.HibernateEmployeeRepositoryImpl"/>

    <bean name="employeeService" class="com.devni.training.salesmanager.service.EmployeeServiceImpl">
        <property name="employeeRepository" ref="employeeRepository"></property>
    </bean>
</beans>

